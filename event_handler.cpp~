#include "event_handler.h"
#include <SDL2/SDL.h>
#include <map>
#include <string>

#include <iostream>

EventHandler::EventHandler() : quit{false}{};

void EventHandler::handleEvents(){
    SDL_Event e;
    while(SDL_PollEvent(&e) != 0){
	if(e.type == SDL_QUIT){
	    quit = true;
	}
	if(e.type == SDL_KEYDOWN){
	    int sym = e.key.keysym.sym;
	    cout << sym << endl;
	    if(map.contains)
	}
    }
}

bool EventHandler::gotQuit(){return quit;}
