#include "sprite.h"
#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>
#include <fstream>
#include <iostream>
#include <filesystem>
#include <map>
using namespace std;

Sprite::~Sprite(){
    delete(buffer);
}

void Sprite::loadFromFile(string path){
    SDL_Surface* loadedSurface = IMG_Load(path.c_str());
}

map<string, Sprite> loadSpritesFromDir(string _path){
    map<string, Sprite> ret{};
    string path{_path};
    string ext{".png"};
    for(auto& p : filesystem::recursive_directory_iterator(path)){
	if(p.path().extension() == ext){
	    cout << p.path().filename().replace_extension("");
	}
    }
    return ret;
}

