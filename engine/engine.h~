#ifndef ENGINE_H
#define ENGINE_H

#include <SDL2/SDL.h>
#include <string>

class Engine{
public:
    Engine();
    ~Engine();
    void close();
    SDL_Renderer* getRenderer();
    SDL_Window* getWindow();
    void hookUpdate(void(*uf)(double), void(*df)(double) = nullptr);
    void startLoop();
private:
    void update(double);
    void render();

    double framerate;
    bool running;

    void(*updateFunc)(double);
    void(*drawFunc)(double);

    SDL_Window* appWindow;
    SDL_Renderer* appRenderer;
};

#endif
    
